<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Privilee UI Suite">
  <test name="UI Tests">
    <classes>
      <!-- Smoke / basic availability -->
      <class name="tests.PageLoadTest"/>

      <!-- Core UI components -->
      <class name="tests.MapLocatorTest"/>
      <class name="tests.FilterPanelTest"/>
      <class name="tests.FilterSelectionTest"/>

      <!-- Functional flows -->
      <class name="tests.FilterNormalFlowTest"/>

      <!-- Data accuracy -->
      <class name="tests.VenueDataAccuracyTest"/>

      <!-- Edge cases -->
      <class name="tests.MapEdgeCaseMarkersNotRenderedTest"/>
      <class name="tests.OverFilteringNoVenuesTest"/>

      <!-- Performance -->
      <class name="tests.PerformanceTest"/>
    </classes>
  </test>
</suite>

