  "item": [
    {
      "name": "GET /users",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{baseUrl}}/users"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response body is JSON array', function () {",
              "    pm.expect(pm.response.json()).to.be.an('array');",
              "});",
              "",
              "pm.test('User object has required fields', function () {",
              "    const body = pm.response.json();",
              "    if (body.length > 0) {",
              "        pm.expect(body[0]).to.have.property('id');",
              "        pm.expect(body[0]).to.have.property('name');",
              "        pm.expect(body[0]).to.have.property('email');",
              "        pm.expect(body[0]).to.have.property('gender');",
              "        pm.expect(body[0]).to.have.property('status');",
              "    }",
              "});"
            ]
          }
        }
      ]
    },
