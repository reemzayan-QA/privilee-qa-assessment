    {
      "name": "GET /users/:id/posts",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{baseUrl}}/users/{{userId}}/posts"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response body is JSON array', function () {",
              "    pm.expect(pm.response.json()).to.be.an('array');",
              "});",
              "",
              "pm.test('Posts belong to the correct user', function () {",
              "    const body = pm.response.json();",
              "    const uid = parseInt(pm.environment.get('userId'));",
              "    body.forEach(function(post){",
              "        pm.expect(post.user_id).to.eql(uid);",
              "    });",
              "});"
            ]
          }
        }
      ]
