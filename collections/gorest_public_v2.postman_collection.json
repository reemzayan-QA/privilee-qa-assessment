{
  "info": {
    "name": "GoREST API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET /users",
      "request": { "method": "GET", "url": "{{baseUrl}}/users" },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "pm.test('Status 200', ()=> pm.response.to.have.status(200));",
          "pm.test('Body is array', ()=> pm.expect(pm.response.json()).to.be.an('array'));"
        ]}
      }]
    },
    {
      "name": "GET /posts",
      "request": { "method": "GET", "url": "{{baseUrl}}/posts" },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "pm.test('Status 200', ()=> pm.response.to.have.status(200));"
        ]}
      }]
    },
    {
      "name": "GET /users/:id/posts",
      "request": { "method": "GET", "url": "{{baseUrl}}/users/{{userId}}/posts" },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "pm.test('Status 200', ()=> pm.response.to.have.status(200));",
          "const arr = pm.response.json();",
          "arr.forEach(p => pm.expect(p.user_id).to.eql(parseInt(pm.environment.get('userId'))));"
        ]}
      }]
    },
    {
      "name": "GET /todos",
      "request": { "method": "GET", "url": "{{baseUrl}}/todos" },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "pm.test('Status 200', ()=> pm.response.to.have.status(200));"
        ]}
      }]
    }
  ]
}
